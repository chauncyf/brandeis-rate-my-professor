<div class="container-fluid h-100 w-100 m-0 p-0">
<div class="messenger-container row">
	<div class="users-container col-lg-3 col-xs-12 h-100 p-0">
		<div class="rounded-0">
			<div class="bg-transparent border border-light d-flex align-items-center" style="height: 8vh;" id="users-header">
				<span class="h2 ml-4">My Inbox</span>
			</div>
			<div class="m-0 p-0">
				<div class="list-group overflow-auto h-100" id="users-list">
					<%= render 'users_list', users: @users %>
				</div>
			</div>
		</div>
	</div>
	<div class="col d-none d-lg-block d-xl-block p-0 h-100" id="conversations-list">
	</div>
</div>
</div>

<script>
	$("#conversation-list").height($("#users-list").height());
</script>
