<% users.each do |user| %>
	<li class="list-group-item d-flex justify-content-between align-items-center border-left-0 border-right-0">
		<%= link_to conversations_path(user_id: user), remote: true, method: :post do %>
			<%= gravatar_for user %>
			<span class="h6 ml-3"><%= user.show_full_name %></span>
		<% end %>

			<i class="fas fa-ellipsis-v dropdown-toggle" id="navbarDropdown" data-toggle="dropdown"></i>

		<div class="dropdown-menu" aria-labelledby="navbarDropdown">
			<%= link_to "Delete", conversations_path(find_conversation(current_user.id, user.id)), remote: true, method: :delete, data: { confirm: "Do you want to delete this conversation?" }, class: "dropdown-item" %>
		</div>
	</li>
<% end %>
