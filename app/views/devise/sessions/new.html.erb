<div class="container-fluid outer-container d-flex align-items-end" style="position:absolute;z-index=1;">
    <div class="inner-container d-flex flex-column align-items-center container-form">
        <div class="card d-flex flex-column align-items-center">
            <h1 class="mt-3 mb-4">Sign In</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="container text-center card-body">
                <div class="row">
                    <div class="col">
                        <%= f.label :email, "Enter email:" %>
                    </div>
                    <div class="col">
                        <%= f.email_field :email, required: true %>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <%= f.label :password, "Enter password:" %>
                    </div>
                    <div class="col">
                        <%= f.password_field :password, required: true %>
                    </div>
                </div>
                <%= f.submit "Login", {class: 'btn btn-lg btn-success mt-3'}%>
            </div>
            <% end %>
            <div class="btn-login mt-2 mb-3">
                <%= link_to  "New around here? Sign up", "/users/new", class: "dropdown-item" %>
                <%= link_to  "Forgot password?", "#", class: "dropdown-item" %>
            </div>
        </div>
    </div>
</div>

<div class="d-flex flex-column align-items-center text-center">
    <div class="error-msg mt-5">
        <% flash.each do |type, msg| %>
        <% if type == 'danger' %>
        <div class="alert alert-danger" role="alert">
            <%= msg %>
        </div>
        <% end %>
        <% end %>
    </div>
</div>

