<div class="container-fluid outer-container d-flex align-items-end" style="position:absolute;z-index=1;">
	<div class="inner-container d-flex flex-column align-items-center container-form">
		<div class="card d-flex flex-column align-items-center">
			<h1 class="mt-5 mb-4">Registration</h1>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
				<div class="container text-center">
					<div class="row">
						<div class="col">
							<%= form.label :first_name %>
						</div>
						<div class="col">
							<%= form.text_field :first_name, required: true %>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<%= form.label :last_name %>
						</div>
						<div class="col">
							<%= form.text_field :last_name, required: true %>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<%= form.label :email %>
						</div>
						<div class="col">
							<%= form.email_field :email, required: true %>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<%= form.label :password %>
						</div>
						<div class="col">
							<%= form.password_field :password, required: true %>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<%= form.label :password_confirmation %>
						</div>
						<div class="col">
							<%= form.password_field :password_confirmation, required: true %>
						</div>
					</div>
					<%= form.submit 'Register', {class: 'btn btn-lg btn-success mt-3'} %>
				</div>
			<% end %>
			<div class="btn-login mt-2 mb-5">
				<%= link_to "Log in", new_session_path(resource_name), class: "dropdown-item" %>
                <%= link_to 'Back', "/", class: "dropdown-item" %>
            </div>
		</div>
	</div>
</div>
<div class="d-flex flex-column align-items-center text-center">
	<div class="error-msg mt-5">
		<% flash.each do |type, msg| %>
			<% if type == 'alert' %>
				<% msg.split("\n").each do |message| %>
					<div class="alert alert-warning" role="alert">
						<%= message %>
					</div>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>

