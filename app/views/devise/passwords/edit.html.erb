<div class="container-fluid outer-container d-flex align-items-end" style="position:absolute;z-index=1;">
	<div class="inner-container d-flex flex-column align-items-center container-form">
		<div class="card" style="min-width:30%;">
			<div class="card-body">
				<h1 class="mt-2 mb-4 text-center">Change Your Password</h1>
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
					<%= f.hidden_field :reset_password_token %>
					<div class="container text-center">
						<div class="row d-flex align-items-center mb-2">
							<div class="col-3 text-left">
								<%= f.label :password, "New password", class: 'font-weight-bold' %>
							</div>
							<div class="col">
								<%= f.password_field :password, required: true, autofocus: true, class: 'form-control form-control-lg', minlength: @minimum_password_length || 1 %>
								<% if @minimum_password_length %>
									<em>(<%= @minimum_password_length %> characters minimum)</em><br />
								<% end %>
							</div>
						</div>
						<div class="row d-flex align-items-center mb-2">
							<div class="col-3 text-left">
								<%= f.label :password_confirmation, "Confirm new password", class: 'font-weight-bold' %>
							</div>
							<div class="col">
								<%= f.password_field :password_confirmation, required: true, autofocus: true, class: 'form-control form-control-lg' %>
							</div>
						</div>
						<%= f.submit "Change my password", class: "btn btn-lg btn-warning mt-3" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
