<div class="container-fluid outer-container d-flex align-items-end" style="position:absolute;z-index=1;">
	<div class="inner-container d-flex flex-column align-items-center container-form">
		<div class="card" style="min-width:30%;">
			<div class="card-body">
				<h1 class="mt-2 mb-4 text-center">Forgot Your Password?</h1>
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<div class="container text-center">
						<div class="row d-flex align-items-center mb-2">
							<div class="col-3 text-left">
								<%= f.label :email, "Your email", class: 'font-weight-bold' %>
							</div>
							<div class="col">
								<%= f.email_field :email, required: true, autofocus: true, class: 'form-control form-control-lg' %>
							</div>
						</div>
						<%= f.submit "Send me reset password email", class: "btn btn-lg btn-info mt-3" %>
					</div>
				<% end %>
				<div class="btn-login mt-2 d-flex flex-column align-items-center">
					<%= link_to "New to our site? Sign up here", new_user_registration_path, class: 'btn-link text-decoration-none' %>
					<%= link_to "Already have an account?", new_user_session_path, class: 'btn-link text-decoration-none' %>
				</div>
			</div>
		</div>
	</div>
</div>
