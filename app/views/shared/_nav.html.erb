<% if !([new_user_session_path, new_user_registration_path, new_user_password_path, edit_user_password_path].include? request.path) %>
<nav class="navbar navbar-expand-md navbar-light">
    <button class="navbar-toggler" type="button" role="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <a class="navbar-brand logo d-flex align-items-center ml-4" href="/" id="hide-mobile">
        <span class="h1 mr-3 nav-title">
            Rate My Professor
        </span>
        <%= image_tag 'brandeis_logo.svg', width: '100', height: '100', class: "d-inline-block align-top logo-img", alt: 'Brandeis logo'%>
    </a>

    <div class="collapse navbar-collapse nav-content" id="navbarToggler">
        <% if request.path == root_path %>
        <div class="form-inline my-2 my-lg-0 search-form d-flex justify-content-center" id="hide-mobile"></div>
        <% else %>
        <div id="hide-mobile">
        <%= form_tag "/search", method: "get", class: "form-inline my-2 my-lg-0 search-form d-flex justify-content-center" do %>
            <%= text_field_tag :search_text, '', placeholder: "Search", class: 'form-control mr-sm-2' %>
            <%= submit_tag "Search", class: 'btn btn-outline-light my-2 my-sm-0' %>
        <% end %>
        </div>
        <% end %>
        <div class="d-flex justify-content-end nav-links">

            <% if !(request.path == root_path) && (current_user && !current_user.is_admin_user) %>
                <a class="nav-item nav-link left-align h5 text-center nav-text nav-review-text" data-toggle="modal" data-target="#formModal">Make A Review</a>
            <% end %>

            <% if logged_in? %>
            
            <div class="modal fade" id ="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
                <div class="container">
                    <%= render 'shared/reviewForm' %>
                </div>
            </div>
            <div class="dropdown nav-item nav-link left-align authentication" id="hide-mobile">
                <a class="dropdown-toggle h5 nav-text" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Hi <%= current_user.first_name %>!
                </a>
                <div class="dropdown-menu rounded-0" aria-labelledby="dropdownMenu">
                    <% if current_user.is_admin_user != true %>
                        <%= button_to  "My Profile", "/view_profile", method: :get, class: "dropdown-item" %>
                        <%= button_to  "Messages", "/messenger_home", method: :get, class: "dropdown-item" %>
                    <% else %>
                        <%= link_to "Administrator", "/admin", class: "dropdown-item" %>
                    <% end %>
                    <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                </div>
            </div>

            <% else %>
            <%= link_to  "Sign In", "/login", class: "nav-item nav-link left-align h5 authentication text-center nav-text" %>
            <% end %>
        </div>
    </div>
</nav>
<% end %>

<script>
</script>