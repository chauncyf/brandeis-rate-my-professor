<div class="card mb-3 card-block shadow review-card" style="width: 18rem; min-width: 18rem; max-width: 18rem;">
    <div class="card-header bg-transparent review-card-header">
            <h4 class="card-title review-card-title">
                <%= link_to card_link do %>
                    <%= data["dept_name"] %>
                <% end %>
            </h4>
    </div>
    <div class="card-body pb-0">
        <div class="ratings">
            <div class="d-flex">
                <p><b class="card-label">Number of Courses</b>
                :
                <span class="h6"><%= data["num_of_courses"] %></span></p>
            </div>
            <div class="d-flex">
                <p><b class="card-label">Number of Professors</b>
                :
                <span class="h6"><%= data["num_of_profs"] %></h6></p>
            </div>
            <div class="d-flex">
                <p><b class="card-label">Most Reviewed Course</b>
                :
                <br/>
                <%= link_to "/general_courses/#{data["max_course_id"]}" do %>
                    <span class="h6"><%= data["max_course_name"] %></span>
                <% end %></p>
            </div>
            <div class="d-flex">
                <p><b class="card-label">Most Reviewed Professor</b>
                :
                <br/>
                <%= link_to "/professors/#{data["max_prof_id"]}" do %> 
                    <span class="h6"><%= data["max_prof_name"] %></span>
                <% end %></p>
            </div>
        </div>
    </div>
</div>