<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title w-100 font-weight-bold" id="exampleModalLabel">
                
                    Write Review
                
            </h4>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="form-close-button">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body" id="write-review-modal">
        
                <%= render partial: 'reviews/form', locals: {review: Review.new}  %>
            
        </div>

    </div>
</div>

<script>
    $(function(){
        $("#form-close-button").click(function(){
            if($("#write-review-modal").hasClass("reviewed")){
                $("#write-review-modal").removeClass("reviewed");
                $("#write-review-modal").html("<%= j render partial: 'reviews/form', locals: {review: Review.new} %>");
            }
        });
    });
</script>